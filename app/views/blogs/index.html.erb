<div class="col-md-10 col-md-offset-1">
   <div class="wrapper">
      <div class="col-md-3">
         <ul class="nav nav-pills nav-stacked">
            <li role="presentation"><%= link_to "Home", welcome_index_path %></li>
            <li role="presentation"><%= link_to "Events", events_path %></li>
            <li role="presentation" class="active"><%= link_to "Blog Posts", blogs_path %></li>
            <li role="presentation"><%= link_to "My Tasks", tasks_path %></li>
            <li role="presentation"><%= link_to "Edit Profile", edit_user_registration_path %></li>
         </ul>
         <hr>
      </div>
      <div class="col-md-9">
         <div class="panel panel-primary">
            <div class="panel-heading clearfix">
               <h4 class="pull-left">Blog Posts</h4> 
               <%= link_to new_blog_path, class:"btn btn-info pull-right" do %><i class="fa fa-plus"></i> New Post<% end %>
            </div>
            <div class="panel-body">
               <div class="table-responsive">
                  <table class="table table-hover">
                     <thead>
                        <tr>
                           <th>Title</th>
                           <th>Description</th>
                           <th>Author</th>
                           <th>Created On</th>
                           <th colspan="3"></th>
                        </tr>
                     </thead>
                     <tbody>
                        <% @blogs.each do |blog| %>
                        <tr>
                           <td><%= link_to blog.title, edit_blog_path(blog) %></td>
                           <td><%= blog.description %></td>
                           <td><%= blog.user.first_name %> <%= blog.user.last_name %></td>
                           <td><%= blog.created_at.strftime("%b. %d, %Y") %></td>
                           <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                           <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

          
