<div class="col-md-10 col-md-offset-1">
   <div class="wrapper">
      <div class="col-md-3">
         <ul class="nav nav-pills nav-stacked">
            <li role="presentation"><%= link_to "Home", welcome_index_path %></li>
            <li role="presentation"><%= link_to "Events", events_path %></li>
            <li role="presentation"><%= link_to "Blog Posts", blogs_path %></li>
            <li role="presentation" class="active"><%= link_to "My Tasks", tasks_path %></li>
            <li role="presentation"><%= link_to "Edit Profile", edit_user_registration_path %></li>
         </ul>
         <hr>
      </div>
      <div class="col-md-9">
            <div class="panel panel-primary">
               <div class="panel-heading clearfix">
                  <h4 class="pull-left">My Tasks</h4>
                </div>
               <div class="panel-body">
                  <div class="table-responsive">
                     <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Project</th>
                        <th>Task</th>
                        <th>Details</th>
                        <th>Deadline</th>
                        <th>Completed</th>
                        <th></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @tasks.each do |task| %>
                        <tr>
                          <td><%= task.project.title %></td>
                          <td><%= task.title %></td>
                          <td><%= task.content %></td>
                          <td><%= task.deadline %></td>
                          <% if task.completed %>
                            <td>Completed</td>
                            <% else %>
                            <td>Incomplete</td>
                          <% end %>
                          <td>
                            <%= link_to task do %><i class="fa fa-eye"></i><% end %> &nbsp;|&nbsp;
                            <%= link_to edit_task_path(task), data: {toggle: "tooltip", title: "Edit"} do %><i class="fa fa-pencil"></i><% end %> &nbsp;|&nbsp;
                            <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-remove"></i><% end %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
         </div>
      </div>
   </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip({
   placement : 'top'
});
});
</script>