<div class="col-md-10 col-md-offset-1">
   <div class="wrapper">
      <div class="col-md-3">
         <ul class="nav nav-pills nav-stacked">
            <li role="presentation"><%= link_to "Home", welcome_index_path %></li>
            <li role="presentation" class="active"><%= link_to "Events", events_path %></li>
            <li role="presentation"><%= link_to "Blog Posts", blogs_path %></li>
            <li role="presentation"><%= link_to "My Tasks", tasks_path %></li>
            <li role="presentation"><%= link_to "Edit Profile", edit_user_registration_path %></li>
         </ul>
         <hr>
      </div>
      <div class="col-md-9">
         <div class="panel panel-primary">
            <div class="panel-heading clearfix">
               <h4 class="pull-left">Events</h4> 
               <%= link_to new_event_path, class:"btn btn-info pull-right" do %><i class="fa fa-plus"></i> New Event<% end %>
            </div>
            <div class="panel-body">
               <div class="table-responsive">
                  <table class="table table-hover">
                     <thead>
                        <tr>
                           <th>Title</th>
                           <th>Date</th>
                           <th>Description</th>
                           <th>Google Cal Link</th>
                           <th colspan="3"></th>
                        </tr>
                     </thead>

                     <tbody>
                        <% @events.each do |event| %>
                        <tr>
                           <td><%= event.title %></td>
                           <td><%= event.date.strftime("%b. %d, %Y - %l:%M %p") %></td>
                           <td><%= event.description %></td>
                           <% if event.link? %>
                           <td>Available</td>
                           <% else %>
                           <td>Not Available</td>
                           <% end %> 
                           <td><%= link_to 'Edit', edit_event_path(event) %></td>
                           <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
