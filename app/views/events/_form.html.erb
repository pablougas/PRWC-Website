<div id="editform">
<%= bootstrap_form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, hide_label: true, placeholder:'Title' %>
  </div>
  <div class="field">
    <%= f.datetime_select :date, placeholder:'Date' %>
  </div>
  <div class="field">
    <%= f.text_area :description, hide_label: true, placeholder:'Event Description' %>
  </div>
  <div class="field">
    <%= f.text_field :link, hide_label: true, placeholder:'Google Cal Link' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
