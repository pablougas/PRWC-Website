<div class="col-md-9">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading clearfix">
				<h4 class="pull-left">Task: <%= @task.title %></h4>
			</div>
			<div class="panel-body">
				<div class="col-md-12">
					<div class="col-md-12 note-box">
						<% @notes.each do |note| %>
						<span class="note">
							<p class="text1"><%= note.note %></p>
							<p class="text2">
								by <%= note.user.first_name %> <%= note.user.last_name %> - <%= note.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b. %d, %Y - %l:%M %p") %>
							</p>
							<hr>
						</span>
						<% end %>
					</div>
					<div class="col-md-12">
						<%= render 'form' %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
