<%= bootstrap_form_for(@minute) do |f| %>
<% if @minute.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@minute.errors.count, "error") %> prohibited this minute from being saved:</h2>

    <ul>
        <% @minute.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="col-md-6">
    <div class="input-group margin-bottom-20">
        <span class="input-group-addon"><i class="fa fa-bookmark"></i></span>
        <%= f.text_field :title, hide_label:true, placeholder:"Meeting Name (Ex: October Meeting)" %>
    </div>
</div>
<div class='col-md-6'>
    <div class="form-group">
        <div class='input-group date' id='datetimepicker'>
            <%= f.datetime_field :date, hide_label: true, class: 'form-control', data: { date_format: 'YYYY/MM/DD hh:mm A/PM' } %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="input-group margin-bottom-20">
        <span class="input-group-addon"><i class="fa fa-building"></i></span>
        <%= f.text_field :location, hide_label:true, value:"Puyallup City Hall - 5th Floor" %>
    </div>
</div>
<div class="col-md-4">
    <div class="input-group margin-bottom-20">
        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
        <%= f.text_field :street, hide_label:true, value:"333 S Meridian" %>
    </div>
</div>
<div class="col-md-3">
    <div class="input-group margin-bottom-20">
        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
        <%= f.text_field :city, hide_label:true, value:"Puyallup" %>
    </div>
</div>
<div class="col-md-2">
    <div class="input-group margin-bottom-20">
        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
        <%= f.text_field :state, hide_label:true, value:"WA" %>
    </div>
</div>
<div class="col-md-3">
    <div class="input-group margin-bottom-20 field">
        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
        <%= f.number_field :zip, hide_label:true, value:"98371" %>
    </div>
</div>
<hr />
<div class="col-md-12">
    <fieldset id="agendas">
        <%= f.fields_for :agendas do |p| %>
        <%= render 'agenda_fields', :f => p %>
        <% end %>
    </fieldset>
    <div class="links">
        <%= link_to_add_association ' Add Meeting Minute', f, :agendas, class:"btn btn-primary btn-block margin-bottom-20" %>
    </div>
</div>
<div class="actions margin-bottom-20 pull-right">
    <%= f.submit "Save" %>
</div>
<% end %>
<script type="text/javascript">
$(document).ready(function () {
    $('#datetimepicker').datetimepicker({});
});
</script>
