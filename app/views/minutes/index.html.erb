<div class="col-md-9">
   <div class="panel panel-primary">
      <div class="panel-heading clearfix">
         <h4 class="pull-left">Minutes</h4>
         <%= link_to new_minute_path, class:"btn btn-info pull-right" do %><i class="fa fa-plus"></i> New Meeting<% end %>
      </div>
      <div class="panel-body">
         <div class="table-responsive">
            <table class="table">
               <thead>
                  <tr>
                     <th class="col-md-2">Meeting</th>
                     <th class="col-md-5">Location</th>
                     <th class="col-md-4">Meeting Date</th>
                     <th class="col-md-1"></th>
                  </tr>
               </thead>

               <tbody>
    <% @minutes.each do |minute| %>
      <tr>
        <td><%= minute.title %></td>
        <td><%= minute.location %></td>
        <td><%= minute.date.strftime("%b. %d, %Y @ %l:%M %p") %></td>
        <td>
            <span class="pull-right">
               <%= link_to edit_minute_path(minute), data: {toggle: "tooltip", title: "Edit Minute"} do %>
               <i class="fa fa-wrench"></i>
               <% end %>
               &nbsp | &nbsp
               <%= link_to minute, method: :delete, data: { toggle: "tooltip", title: "Delete Minute", confirm: 'Are you sure?' } do %>
               <i class="fa fa-remove"></i>
               <% end %>
            </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
