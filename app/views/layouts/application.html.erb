<!DOCTYPE html>
<html>
	<head>
		<%= Gon::Base.render_data({}) %>
		<title>Puyallup River Watershed Council</title>

		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<%= favicon_link_tag 'favicon.ico' %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag "bootstrap-glyphicons.css" %>
		<%= stylesheet_link_tag 'application', "http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" %>
	</head>
	<body>
		<header class="container">
			<nav id="myNavbar" class="navbar navbar-static-bottom">
				<div class="container-fluid">
					<!-- Brand and toggle get grouped for better mobile display -->
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<%= image_tag('logo2.png', class:"navbar-brand hidden-md hidden-lg img-responsive sm-logo") %>
					</div>

					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse" id="main-nav">
						<div class="logo hidden-xs hidden-sm">
	        				<%= image_tag('logo2.png', class:'img-responsive') %>
						</div>
						<ul class="nav navbar-nav">
							<li id="menu-margin"class="<%= 'active' if current_page?(home_index_path) %>"><%= link_to "Home", home_index_path %></li>
							<li class="<%= 'active' if current_page?(home_about_path) %>"><%= link_to "About", home_about_path %></li>
							<li class="<%= 'active' if current_page?(home_events_path) %>"><%= link_to "Events", home_events_path %></li>
							<li class="<%= 'active' if current_page?(home_blog_path) %>"><%= link_to "Blog", home_blog_path %></li>
							<li class="<%= 'active' if current_page?(home_gallery_path) %>"><%= link_to "Gallery", home_gallery_path %></li>
							<li class="<%= 'active' if current_page?(home_memberships_path) %>"><%= link_to "Memberships", home_memberships_path %></li>
							<li id="contactScroll" class="<%= 'active' if current_page?(home_index_path(:anchor => "contact")) %>"><%= link_to("Contact", home_index_path(:anchor => "contact")) %></li>
							<% if current_user.blank? %>
								<li class=><%= link_to "Sign In", user_session_path %></li>
							<% else %>
							<li>
								<%= link_to root_path do %>
								<i class="fa fa-dashboard"> </i> Dashboard
								<% end %>
							</li>
							<li>
								<%= link_to destroy_user_session_path, method: 'delete' do %>
								<i class="fa fa-power-off"> </i> Sign Out
								<% end %>
							</li>
							<% end %>
						</ul>
					</div>
				</div><!-- /.container-fluid -->
			</nav>
		</header>
			<% if notice %>
			<p class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
			<p class="alert alert-danger"><%= alert %></p>
			<% end %>

			<%= yield %>
		<footer>
			<nav id="top" class="navbar navbar-inverse navbar-fixed-bottom">
				<nav class="navbar navbar-inverse navbar-fixed-bottom">
					<div class="container-fluid">
					</div>
				</nav>
			</nav>
			<nav class="navbar navbar-inverse navbar-fixed-bottom">
				<div class="container-fluid">
					<ul class="nav navbar-nav navbar-right inline">
						<li class="col-xs-3"><%= link_to "https://www.facebook.com/PRWCM/", class:"inline", target:"_blank" do %><i class="fa fa-facebook-f"></i><% end %></li>
						<li class="col-xs-3"><%= link_to "https://www.instagram.com/the_prwc/", class:"inline", target:"_blank" do %><i class="fa fa-instagram"></i><% end %></li>
						<li class="col-xs-3"><%= link_to "https://twitter.com/prwc_sec", class:"inline", target:"_blank" do %><i class="fa fa-twitter"></i><% end %></li>
						<li class="col-xs-3"><%= link_to "https://www.linkedin.com/company/15343186?trk=tyah&trkInfo=clickedVertical%3Acompany%2CclickedEntityId%3A15343186%2Cidx%3A2-1-2%2CtarId%3A1487627271985%2Ctas%3Apuyallup%20watershed", class:"inline", target:"_blank" do %><i class="fa fa-linkedin"></i><% end %></li>
					</ul>
				</div>
			</nav>
		</footer>
	</body>
</html>
