<div class="col-md-10 col-md-offset-1">
   <div class="wrapper">
      <div class="col-md-3">
         <ul class="nav nav-pills nav-stacked">
            <li role="presentation" class="active"><%= link_to "Home", welcome_index_path %></li>
            <li role="presentation"><%= link_to "Events", events_path %></li>
            <li role="presentation"><%= link_to "Blog Posts", blogs_path %></li>
            <li role="presentation"><%= link_to "My Tasks", tasks_path %></li>
            <li role="presentation"><%= link_to "Edit Profile", edit_user_registration_path %></li>
         </ul>
         <hr>
      </div>
      <div class="col-md-9">
         <div class="col-md-6">
            <div class="panel panel-primary">
               <div class="panel-heading clearfix">
                  <h4 class="pull-left">Upcoming Events</h4> 
                  <%= link_to new_event_path, class:"btn btn-info pull-right" do %><i class="fa fa-plus"></i> New Event<% end %>
               </div>
               <div class="panel-body">
                  <div class="table-responsive">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th>User</th>
                              <th>Title</th>
                              <th>Description</th>
                              <th>Complete</th>
                              <th>Deadline</th>
                              <th colspan="3"></th>
                           </tr>
                        </thead>

                        <tbody>
                           <% @projects.each do |project| %>
                           <tr>
                              <td><%= project.user %></td>
                              <td><%= project.title %></td>
                              <td><%= project.description %></td>
                              <td><%= project.complete %></td>
                              <td><%= project.deadline %></td>
                              <td><%= link_to 'Show', project %></td>
                              <td><%= link_to 'Edit', edit_project_path(project) %></td>
                              <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                           </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

    <%= link_to 'New Project', new_project_path %>
