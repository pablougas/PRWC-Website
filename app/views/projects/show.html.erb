<div class="row nopadding">
   <div class="col-md-10 col-md-offset-1 wrapper">
      <div class="col-md-3">
         <ul class="nav nav-pills nav-stacked">
            <li role="presentation"><%= link_to "Home", welcome_index_path %>
               <div style="padding-left:30px;">
               <ul class="nav nav-pills nav-stacked">
                  <li role="presentation" class="active"><%= link_to "Project Details", url_for(params) %></li>
               </ul>
               </div>
            </li>
            <li role="presentation"><%= link_to "Events", events_path %></li>
            <li role="presentation"><%= link_to "Blog Posts", blogs_path %></li>
            <li role="presentation"><%= link_to "My Tasks", tasks_path %></li>
            <li role="presentation"><%= link_to "Edit Profile", edit_user_registration_path %></li>
         </ul>
         <hr>
      </div>
      <div class="col-md-9">
         <div class="col-md-12">
            <div class="panel panel-primary">
               <div class="panel-heading clearfix">
                  <h4 class="pull-left">Project: <%= @project.title %></h4> 
               </div>
               <div class="panel-body">
                  <div class="table-responsive">
                     <table class="table">
                        <thead>
                           <tr>
                              <th>Project Description</th>
                              <th>Status</th>
                              <th>Task Deadline</th>
                              <th colspan="3"></th>
                           </tr>
                        </thead>

                        <tbody>
                           <tr <% if @project.deadline.past? %>
                              class="danger"
                              <% elsif range? %>
                              class="warning"
                              <% else %>
                              class="success"
                              <% end %>>
                              <td><% if @project.description? %>
                                 <%= @project.description %>
                                 <% else %>
                                 Description unavailable
                                 <% end %>
                              </td>
                              <td>
                                 <% if @project.complete? %>
                                 Completed
                                 <% else %>
                                 Incomplete
                                 <% end %>
                              </td>
                              <td><%= @project.deadline.strftime("%b. %d, %Y") %></td>
                              <td><%= link_to 'Edit', edit_project_path(@project) %></td>
                              <td><%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <div class="panel panel-primary">
               <div class="panel-heading clearfix">
                  <h4 class="pull-left">Task List</h4> 
               </div>
               <div class="panel-body">
                  <div class="table-responsive">
                     <table class="table table-hover">
                        <thead>
                           <tr>
                              <th>Task</th>
                              <th>Details</th>
                              <th>Status</th>
                              <th>Deadline</th>
                              <th colspan="2"></th>
                           </tr>
                        </thead>

                        <tbody>
                           <% if @project.tasks.exists? %>
                              <% @project.tasks.each do |t| %>
                              <tr> 
                                 <td>
                                    <%= link_to task_path(t) do %>
                                    <%= t.title %>
                                    <% end %>
                                 </td>
                                 <td><%= t.content %></td>
                                 <td>
                                    <% if t.completed? %>
                                    Completed
                                    <% else %>
                                    Incomplete
                                    <% end %>
                                 </td>
                                 <td><%= t.deadline %></td>
                                 <td>
                                    <%= link_to edit_project_path(@project), data: {toggle: "tooltip", title: "Edit Task"} do %>
                                       <i class="fa fa-wrench"></i>
                                    <% end %>
                                    &nbsp | &nbsp
                                    <%= link_to task_path(t), data: {toggle: "tooltip", title: "View Task"} do %>
                                       <i class="fa fa-eye"></i>
                                    <% end %>
                                    &nbsp | &nbsp
                                    <%= link_to new_task_note_path(t), data: {toggle: "tooltip", title: "Add Note"} do %>
                                       <i class="fa fa-pencil"></i>
                                    <% end %>
                                 </td>
                              </tr>
                              <% end %>
                           <% else %>
                           <tr> 
                              <td> No tasks currently exist. <%= link_to 'Add A Task', edit_project_path(@project) %></td> 
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip({
   placement : 'top'
});
});
</script>