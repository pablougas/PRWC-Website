<div class="container">
  <div id="form" class="col-md-6 col-md-offset-3">

<h2 class="thick">Registration</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, hide_label: true, placeholder:'First Name', autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, hide_label: true, placeholder:'Last Name', autofocus: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, hide_label: true, placeholder:'Email', autofocus: true %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, hide_label: true, placeholder:'Password', autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, hide_label: true, placeholder:'Confirm Password', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
