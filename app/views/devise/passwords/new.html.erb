<div class="container">
  <div id="form" class="col-md-6 col-md-offset-3">

<h2 class="thick">Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, hide_label: true, placeholder:'Email', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Reset", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>