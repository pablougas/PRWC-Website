<div class="container">
  <div id="form" class="col-md-6 col-md-offset-3">

<h2 class="thick">Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, hide_label: true, placeholder:'Email', autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, hide_label: true, placeholder:'Password', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>